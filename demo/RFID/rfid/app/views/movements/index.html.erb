<p id="notice"><%= notice %></p>

<h1>Listing Movements</h1>

<table>
  <thead>
    <tr>
      <th>Part</th>
      <th>Fifo</th>
      <th>Quantity</th>
      <th>Package nr</th>
      <th>Uniq</th>
      <th>From position</th>
      <th>From warehouse</th>
      <th>To position</th>
      <th>To warehouse</th>
      <th>Move type</th>
      <th>User</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
        <td><%= movement.part_id %></td>
        <td><%= movement.fifo %></td>
        <td><%= movement.quantity %></td>
        <td><%= movement.package_nr %></td>
        <td><%= movement.uniq %></td>
        <td><%= movement.from_position_id %></td>
        <td><%= movement.from_warehouse_id %></td>
        <td><%= movement.to_position_id %></td>
        <td><%= movement.to_warehouse_id %></td>
        <td><%= movement.move_type_id %></td>
        <td><%= movement.user_id %></td>
        <td><%= movement.remarks %></td>
        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

