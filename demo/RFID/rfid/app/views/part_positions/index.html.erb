<style type="text/css">
    th, td {
        text-align: center;
    }
</style>

<p class="title">零件位置列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div class="slide">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-md-12" style="height: 40px;">
      <div class="col-sm-4">
           <span>零件编号：
        <input type="text" name="part_position[part_id]" value="<%= @part_id %>"/>
      </span>
      </div>
      <div class="col-sm-4">
           <span>库位编号：
        <input type="text" name="part_position[position_id]" value="<%= @position_id %>"/>
      </span>
      </div>
      <div class="col-sm-4">
           <span>默认源库位：
        <input type="text" name="part_position[from_position_id]" value="<%= @from_position_id %>"/>
      </span>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 2px solid #999;margin-top: 20px;">
      <div class="col-sm-4">
          <span> 默认源仓库：
            <%= select_tag('part_position[from_warehouse_id]', options_from_collection_for_select(Warehouse.all, 'id', 'nr', @from_warehouse_id), include_blank: true) %>
      </span>
      </div>
      <div class="col-sm-4">
        <input style="margin: -10px 0 0 0;width: 200px;" type="submit" value="查 找" class="btn btn-primary" name="search"/>
      </div>
      <div class="col-sm-4">
        <input style="margin: -10px 0 0 0;width: 200px;" type="submit" value="导出" class="btn btn-primary" name="download"/>
      </div>
    </div>
  </form>
</div>


<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">零件位置</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;width: 400px;margin-top: 10px;">
      <div class="page_info">
        <%= page_entries_info @part_positions %>
      </div>
      <%= will_paginate @part_positions, :container => false %>
    </div>

    <div style="margin-left: 200px;">
      <%= link_to '新建零件位置', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_part_positions_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow: auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>零件号</th>
      <th>库位号</th>
      <th>仓库号</th>
      <th>安全库存</th>
      <th>默认源仓库</th>
      <th>默认源库位</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @part_positions.each do |part_position| %>
        <tr>
          <td><%= part_position.part.blank? ? '' : part_position.part.nr %></td>
          <td><%= part_position.position.blank? ? '' : part_position.position.nr %></td>
          <td><%= part_position.position.blank? ? '' : part_position.position.warehouse.nr %></td>
          <td><%= part_position.safe_stock %></td>
          <td><%= part_position.from_warehouse.blank? ? '' : part_position.from_warehouse.nr %></td>
          <td><%= part_position.from_position.blank? ? '' : part_position.from_position.nr %></td>
          <td>
            <%= link_to '[详情]', part_position %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_part_position_path(part_position) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', part_position, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[8].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[8].children[0].children[0]).ready(function () {
    });
</script>