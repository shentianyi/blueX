<%= form_for(@part_position) do |f| %>
    <% if @part_position.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@part_position.errors.count, "error") %> prohibited this part_position from being
            saved:</h2>

          <ul>
            <% @part_position.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="col-sm-12">
      <div class="col-sm-4">
        <div class="field">
          <%= f.label :part_id %><br>
          <%= f.text_field :part_id %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="field">
          <%= f.label :position_id %><br>
          <%= f.select(:position_id, Position.options, {include_blank: false}) %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="field">
          <%= f.label :safe_stock %><br>
          <%= f.text_field :safe_stock %>
        </div>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 2px solid #999;">
      <div class="col-sm-4">
        <div class="field">
          <%= f.label :from_warehouse_id %><br>
          <%= f.select(:from_warehouse_id, Warehouse.options, {include_blank: false}) %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="field">
          <%= f.label :from_position_id %><br>
          <%= f.select(:from_position_id, Position.options, {include_blank: false}) %>
        </div>
      </div>
    </div>

    <div class="actions">
      <input type="submit" class="btn btn-primary" name="commit" value="完成" style="margin: 30px 0 10px 20px;width: 200px;">
    </div>
<% end %>
