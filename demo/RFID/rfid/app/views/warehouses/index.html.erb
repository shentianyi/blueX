<style type="text/css">
    th, td {
        text-align: center;
    }
</style>

<p class="title">仓库列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>
<div class="slide col-sm-12" style="border-bottom: 2px solid #999;">

  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-sm-3">
           <span>仓库号：
        <input type="text" name="warehouse[nr]" value="<%= @nr %>"/>
        <input type="hidden" name="warehouse[nr_fuzzy]"/>
      </span>
    </div>
    <div class="col-sm-3">
           <span>仓库类型：
        <input type="text" name="warehouse[type]" value="<%= @type %>"/>
        <input type="hidden" name="warehouse[type_fuzzy]"/>
      </span>
    </div>
    <div class="col-sm-3">
          <span> 所属地点：
            <%= select_tag('warehouse[location]', options_from_collection_for_select(Location.all, 'id', 'nr', @location), include_blank: true) %>
      </span>
    </div>
    <div class="col-sm-3">
      <input style="margin: -10px 0 0 0;width: 200px;" type="submit" value="查 找" class="btn btn-primary"/>
    </div>
  </form>
</div>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">仓库列表</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;">
      <div class="page_info">
        <%= page_entries_info @warehouse %>
      </div>
      <%= will_paginate @warehouse, :container => false %>
    </div>

    <div style="margin-left: 200px;margin-top: 0px;">
      <%= link_to '新建仓库', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_warehouses_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>
<div class="table-show" style="overflow:auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>仓库号</th>
      <th>名称</th>
      <th>描述</th>
      <th>类型</th>
      <th>上级仓库</th>
      <th>所属地点</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @warehouses.each do |warehouse| %>
        <tr>
          <td><%= warehouse.nr %></td>
          <td><%= warehouse.name %></td>
          <td><%= warehouse.description %></td>
          <td><%= warehouse.type %></td>
          <td><%= warehouse.parent.blank? ? '' : warehouse.parent.nr %></td>
          <td><%= warehouse.location.blank? ? '' : warehouse.location.nr %></td>
          <td>
            <%= link_to '[详情]', warehouse %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_warehouse_path(warehouse) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', warehouse, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[1].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[1].children[0].children[0]).ready(function () {
    });
</script>