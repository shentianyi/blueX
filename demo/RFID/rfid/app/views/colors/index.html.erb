<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">零件颜色列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 158px;"/>

<hr style="border: 1px solid #000;">

<div class="container">
  <fieldset style="width: 80%;margin-top: 60px;border: 1px solid #ccc;">

    <legend style="width: 100px;">零件颜色列表</legend>
    <div style="display: inline-flex;">
      <div class="trapezoid" style="margin: 0;">
        <p style="padding-top: 20px;">零件颜色列表</p>
      </div>
      <div style="display: inline-flex;">
        <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;">
          <div class="page_info">
            <%= page_entries_info @colors %>
          </div>
          <%= will_paginate @colors, :container => false %>
        </div>

        <%= link_to '新建零件类型', send("new_#{@model}_path"), :class => 'btn btn-primary',
                    :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
        <%= link_to '导入数据', import_colors_path, :class => 'btn btn-primary',
                    :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
      </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
      <thead>
      <tr>
        <th>颜色编号</th>
        <th>名称</th>
        <th>简称</th>
        <th>描述</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @colors.each do |color| %>
          <tr>
            <td><%= color.nr %></td>
            <td><%= color.name %></td>
            <td><%= color.short_name %></td>
            <td><%= color.description %></td>
            <td>
              <%= link_to '[详情]', color %>
              <% if current_user.can_edit %>
                  <%= link_to '[编辑]', edit_color_path(color) %>
              <% end %>
              <% if current_user.can_delete %>
                  <%= link_to '[删除]', color, method: :delete, data: {confirm: '确定删除?'} %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </fieldset>
</div>

