<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">零件颜色列表<i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">零件颜色</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin-top: 10px;">
      <div class="page_info">
        <%= page_entries_info @colors %>
      </div>
      <%= will_paginate @colors, :container => false %>
    </div>

    <div style="margin-left: 200px;">
      <%= link_to '新建零件颜色', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_colors_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>颜色编号</th>
      <th>名称</th>
      <th>简称</th>
      <th>描述</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>

    <tbody>
    <% @colors.each do |color| %>
        <tr>
          <td><%= color.nr %></td>
          <td><%= color.name %></td>
          <td><%= color.short_name %></td>
          <td><%= color.description %></td>
          <td>
            <%= link_to '[详情]', color %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_color_path(color) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', color, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    //    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
    $('.table-show').css({maxHeight: '700px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[5].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[5].children[0].children[0]).ready(function () {
    });
</script>