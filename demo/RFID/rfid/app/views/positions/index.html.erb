<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">库位列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>


<div class="slide col-sm-12" style="border-bottom: 2px solid #999;">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-sm-3">
           <span>库位编号：
        <input type="text" name="position[nr]" value="<%= @nr %>"/>
        <input type="hidden" name="position[nr_fuzzy]"/>
      </span>
    </div>
    <div class="col-sm-3">
           <span>名称：
        <input type="text" name="position[name]" value="<%= @name %>"/>
        <input type="hidden" name="position[name_fuzzy]"/>
      </span>
    </div>
    <div class="col-sm-3">
          <span> 所属仓库：
            <%= select_tag('position[warehouse]', options_from_collection_for_select(Warehouse.all, 'id', 'nr', @warehouse), include_blank: true) %>
      </span>
    </div>
    <div class="col-sm-3">
      <input style="margin: -10px 0 0 0;" type="submit" value="查 找" class="btn btn-primary" name="search"/>
      <input style="margin: -10px 0 0 20px;" type="submit" value="导出" class="btn btn-primary" name="download"/>
    </div>
  </form>
</div>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">库位列表</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin-top:20px;width: 400px;">
      <div class="page_info">
        <%= page_entries_info @position %>
      </div>
      <%= will_paginate @position, :container => false %>
    </div>

    <div style="margin-left: 100px;">
      <%= link_to '新建库位', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_positions_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow:auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>库位号</th>
      <th>名称</th>
      <th>描述</th>
      <th>所属仓库</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @positions.each do |position| %>
        <tr>
          <td><%= position.nr %></td>
          <td><%= position.name %></td>
          <td><%= position.description %></td>
          <td><%= position.warehouse.blank? ? '' : position.warehouse.nr %></td>
          <td>
            <%= link_to '[详情]', position %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_position_path(position) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', position, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
</script>