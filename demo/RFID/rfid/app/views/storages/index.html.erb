<style type="text/css">
    th, td {
        text-align: center;
    }
</style>

<p class="title">库存详细列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
  <div class="slide">
    <div class="col-sm-12" style="border-bottom: 1px dashed #999;">
      <div class="col-sm-3">
            <span>零件号：
              <input type="text" name="storage[part_id]" value="<%= @part_id %>"/>
            </span>
      </div>

      <div class="col-sm-3">
            <span>唯一码：
              <input type="text" name="storage[package_nr]" value="<%= @package_nr %>"/>
              <input type="hidden" name="storage[package_nr_fuzzy]"/>
            </span>
      </div>

      <div class="col-sm-3">
            <span>仓库号：
              <%= select_tag('storage[warehouse_id]', options_from_collection_for_select(Warehouse.all, :id, :nr, @warehouse_id), include_blank: true) %>
            </span>
      </div>

      <div class="col-sm-3">
            <span>库位号：
              <input type="text" name="storage[position_id]" value="<%= @position_id %>"/>
            </span>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 2px solid #999;margin: 20px 0 0 0;">
      <div class="col-sm-4">
            <span style="margin-left: 4px;">
              创建日期：
              <input type="text" name="storage[created_at][start]" class="datetime-picker" value="<%= @created_at_start %>" style="width: 200px;"/>
              ~  <input type="text" name="storage[created_at][end]" class="datetime-picker" value="<%= @created_at_end %>" style="width: 200px;"/>
            </span>
      </div>

      <div class="col-sm-5">
            <span style="margin-left: 4px;">
              FIFO：
              <input type="text" name="storage[fifo][start]" class="datetime-picker" value="<%= @fifo_start %>" style="width: 200px;"/>
              ~  <input type="text" name="storage[fifo][end]" class="datetime-picker" value="<%= @fifo_end %>" style="width: 200px;"/>
            </span>
      </div>

      <div class="col-sm-3">
        备注：
        <input type="text" name="storage[remarks]" value="<%= @remarks %>"/>
        <input type="hidden" name="storage[remarks_fuzzy]"/>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 2px solid #999;margin: 20px 0 0 0;">
      <div class="col-sm-4">
        <%= link_to '导入入库数据', import_storages_path, :class => 'btn btn-primary',
                    :style => 'color:#fff;padding-top:10px;margin:-10px;width: 200px;' %>
      </div>

      <div class="col-sm-4">
        <input style="margin: -10px;width: 200px;" type="submit" value="导出" class="btn btn-primary" name="download"/>
      </div>

      <div class="col-sm-4">
        <input style="margin: -10px;width: 200px;" type="submit" value="查 找" class="btn btn-primary" name="search"/>
      </div>
    </div>
  </div>
</form>

<hr style="border: 1px solid #000;">

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 0;">
    <p style="padding-top: 20px;">库存详细</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;">
      <div class="page_info">
        <%= page_entries_info @storage %>
      </div>
      <%= will_paginate @storage, :container => false %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow:auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>序号</th>
      <th>零件</th>
      <th>FIFO</th>
      <th>数量</th>
      <th>唯一码</th>
      <th>库位</th>
      <th>仓库</th>
      <th>创建时间</th>
      <th>备注</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>

    <tbody>
    <% @storages.each_with_index do |storage, index| %>
        <tr>
          <td><%= index+@storages.offset+1 %>
          <td><%= storage.part.blank? ? '' : storage.part.nr %></td>
          <td><%= storage.fifo.localtime unless storage.fifo.blank? %></td>
          <td><%= storage.quantity %></td>
          <td><%= storage.package_nr %></td>
          <td><%= storage.position.blank? ? '' : storage.position.nr %></td>
          <td><%= storage.warehouse.blank? ? '' : storage.warehouse.nr %></td>
          <td><%= storage.created_at.localtime %></td>
          <td><%= storage.remarks %></td>
          <td>
            <%= link_to '[详情]', storage %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_storage_path(storage) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', storage, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
</script>