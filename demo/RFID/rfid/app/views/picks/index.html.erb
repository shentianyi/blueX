<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">择货单详细列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div class="slide">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-md-12">
      <div class="col-sm-4">
            <span>择货单号：
              <input type="text" name="pick[nr]" value="<%= @nr %>"/>
            </span>
      </div>
      <div class="col-sm-4">
            <span>创建者：
              <input type="text" name="pick[user_id]" value="<%= @user_id %>"/>
            </span>
      </div>
      <div class="col-sm-4">
            <span>仓库：
              <%= select_tag('pick[warehouse_id]', options_from_collection_for_select(Warehouse.all, :id, :nr, @warehouse_id), include_blank: true) %>
            </span>
      </div>
    </div>
    <div class="col-md-12" style="margin: 30px 0 0 0;border-bottom: 2px solid #999;">
      <div class="col-sm-4">
            <span>状态：
              <%= select_tag('pick[status]', options_for_select(PickStatus.menu, @status), include_blank: true, :style => 'width:150px;') %>
            </span>
      </div>

      <div class="col-sm-4">
            <span>
              创建日期：
              <input type="text" name="pick[created_at][start]" class="datetime-picker" value="<%= @created_at_start %>"/>
              ~  <input type="text" name="pick[created_at][end]" class="datetime-picker" value="<%= @created_at_end %>"/>
            </span>
      </div>
      <div class="col-sm-4">
        <input style="margin: -10px 0 10px 20px;width:200px;" type="submit" value="查 找" class="btn btn-primary"/>
      </div>

    </div>
  </form>
</div>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">择货单详细</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin:10px 0 0 0;">
      <div class="page_info">
        <%= page_entries_info @picks %>
      </div>
      <%= will_paginate @picks, :container => false %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow: auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>序号</th>
      <th>择货单号</th>
      <th>创建者</th>
      <th>创建日期</th>
      <th>状态</th>
      <th>仓库</th>
      <th>备注</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @picks.each_with_index do |pick, index| %>
        <tr>
          <td><%= index+@picks.offset+1 %>
          <td><%= pick.nr %></td>
          <td><%= pick.user.blank? ? '' : pick.user.nr %></td>
          <td><%= pick.created_at.localtime %></td>
          <td><%= PickStatus.display pick.status %></td>
          <td><%= pick.warehouse.blank? ? '' : pick.warehouse.nr %></td>
          <td><%= pick.remarks %></td>
          <td><%= link_to '已择货清单列表', pick_end_items_pick_path(pick) %>
            <span class="badge pull-right"><%= pick.pick_items.where(status: PickItemStatus::PICKED).count %></td>
          <td><%= link_to '清单列表', pick_items_pick_path(pick) %>
            <span class="badge pull-right"><%= pick.pick_items.count %></td>
          <td><%= link_to '导出数据', {controller: 'picks', action: 'exports', id: pick} %></td>
          <td>
            <%= link_to '[详情]', pick %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_pick_path(pick) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', pick, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

