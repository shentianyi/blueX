<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>User</th>
      <th>Status</th>
      <th>Quantity</th>
      <th>Part</th>
      <th>Orderable</th>
      <th>Orderable type</th>
      <th>Is emergency</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order %></td>
        <td><%= order_item.user %></td>
        <td><%= order_item.status %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.part_id %></td>
        <td><%= order_item.orderable_id %></td>
        <td><%= order_item.orderable_type %></td>
        <td><%= order_item.is_emergency %></td>
        <td><%= order_item.remarks %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

