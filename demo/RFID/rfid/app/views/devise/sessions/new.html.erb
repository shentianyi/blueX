<div style="width: 100%;height: 100%;background:#424A5D;position: absolute;top: 0;left: 0;">
  <div class="LoginBox">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2>WMS LEONI</h2>

        <p><span class="alert error" style="color: white;"><%= alert %></span></p>

        <div class="LoginContent">
          <h4>员工号:</h4>
          <input autofocus="autofocus" type="text" name="user[nr]" id="user_nr" style="color: white;">
          <span id="CheckUsername"></span>
        </div>

        <div class="LoginContent">
          <h4>密　码:</h4>
          <input type="password" name="user[password]" id="user_password" style="color: white;">

          <span id="CheckPassword"></span>
        </div>


        <% if devise_mapping.rememberable? %>
            <div class="LoginContent">
              <%= f.check_box :remember_me %>
              <h5><%= f.label :记住我 %></h5>
              <button type="submit" name="commit" class="btn btn-info" style="width: 200px;margin-top: 40px;margin-left: 0px;">登陆</button>
            </div>
        <% end %>
    <% end %>
    <!--<%= render "devise/shared/links" %>-->
  </div>
</div>