<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">零件类型列表</p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">零件类型</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin: 10px 0 0 0;">
      <div class="page_info">
        <%= page_entries_info @part_types %>
      </div>
      <%= will_paginate @part_types, :container => false %>
    </div>

    <div style="margin-left: 200px;margin-bottom: 20px;">
      <%= link_to '新建零件类型', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_part_types_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show">

  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>零件类型</th>
      <th>名称</th>
      <th>描述</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>

    <tbody>
    <% @part_types.each do |part_type| %>
        <tr>
          <td><%= part_type.nr %></td>
          <td><%= part_type.name %></td>
          <td><%= part_type.description %></td>
          <td>
            <%= link_to '[详情]', part_type %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_part_type_path(part_type) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', part_type, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[4].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[4].children[0].children[0]).ready(function () {
    });
</script>