<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table>
  <thead>
    <tr>
      <th>Nr</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Description</th>
      <th>Unit group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.nr %></td>
        <td><%= unit.name %></td>
        <td><%= unit.short_name %></td>
        <td><%= unit.description %></td>
        <td><%= unit.unit_group_id %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

