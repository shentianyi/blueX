<style type="text/css">
    th, td {
        text-align: center;
    }
</style>

<p class="title">零件单位列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">零件单位</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin-top: 10px;">
      <div class="page_info">
        <%= page_entries_info @units %>
      </div>
      <%= will_paginate @units, :container => false %>
    </div>

    <div style="margin-left: 200px;margin-bottom: 20px;">
      <%= link_to '新建零件单位', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_units_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>单位编号</th>
      <th>名称</th>
      <th>简称</th>
      <th>描述</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @units.each do |unit| %>
        <tr>
          <td><%= unit.nr %></td>
          <td><%= unit.name %></td>
          <td><%= unit.short_name %></td>
          <td><%= unit.description %></td>
          <td>
            <%= link_to '[详情]', unit %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_unit_path(unit) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', unit, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[6].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[6].children[0].children[0]).ready(function () {
    });
</script>