<p id="notice"><%= notice %></p>

<h1>Listing Parts</h1>

<table>
  <thead>
    <tr>
      <th>Nr</th>
      <th>Name</th>
      <th>Description</th>
      <th>Short description</th>
      <th>Part</th>
      <th>Color</th>
      <th>Measure unit</th>
      <th>Purchase unit</th>
      <th>Custom nr</th>
      <th>Cross section</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.nr %></td>
        <td><%= part.name %></td>
        <td><%= part.description %></td>
        <td><%= part.short_description %></td>
        <td><%= part.part %></td>
        <td><%= part.color %></td>
        <td><%= part.measure_unit_id %></td>
        <td><%= part.purchase_unit_id %></td>
        <td><%= part.custom_nr %></td>
        <td><%= part.cross_section %></td>
        <td><%= part.weight %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

