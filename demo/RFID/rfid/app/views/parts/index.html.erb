<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">零件列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div class="slide">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-sm-12" style="border-bottom: 2px dashed #999;">
      <div class="col-sm-3">
           <span>零件编号：
        <input type="text" name="part[nr]" value="<%= @nr %>"/>
        <input type="hidden" name="part[nr_fuzzy]"/>
      </span>
      </div>
      <div class="col-sm-3">
           <span>名称：
        <input type="text" name="part[name]" value="<%= @name %>"/>
        <input type="hidden" name="part[name_fuzzy]"/>
      </span>
      </div>
      <div class="col-sm-3">
           <span>客户号：
        <input type="text" name="part[custom_nr]" value="<%= @custom_nr %>"/>
        <input type="hidden" name="part[custom_nr_fuzzy]"/>
      </span>
      </div>
      <div class="col-sm-3">
          <span> 零件类型：
            <%= select_tag('part[part_type_id]', options_from_collection_for_select(PartType.all, 'id', 'nr', @part_type_id), include_blank: true, :style => 'min-width:100px;" ') %>
      </span>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 2px solid #999;margin-top: 20px;">
      <div class="col-sm-3">
          <span> 零件颜色：
            <%= select_tag('part[color_id]', options_from_collection_for_select(Color.all, 'id', 'nr', @color_id), include_blank: true, :style => 'min-width:100px;" ') %>
      </span>
      </div>
      <div class="col-sm-4">
        <span>重量：从</span>
        <input type="text" name="part[weight][start]" value="<%= @weight_start %>"><span>到</span>
        <input type="text" name="part[weight][end]" value="<%= @weight_end %>">
      </div>
      <div class="col-sm-3" style="margin-top: -10px;">
        <input style="margin: 0" type="submit" value="查 找" class="btn btn-primary" name="search"/>
        <input style="margin: 0 0 0 20px;" type="submit" value="导出" class="btn btn-primary" name="download"/>
      </div>
    </div>
  </form>
</div>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">零件列表</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;width: 400px;margin-top: 10px;">
      <div class="page_info">
        <%= page_entries_info @part %>
      </div>
      <%= will_paginate @part, :container => false %>
    </div>

    <div style="margin-left: 100px;">
      <%= link_to '新建零件', send("new_#{@model}_path"), :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin:10px 0 0 20px' %>
      <%= link_to '导入数据', import_parts_path, :class => 'btn btn-primary',
                  :style => 'color:#fff;padding-top:10px;margin-left:50px;margin-top:10px;' %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow: auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>零件编号</th>
      <th>名称</th>
      <th>描述</th>
      <th>类型</th>
      <th>颜色</th>
      <th>计量单位</th>
      <th>销售单位</th>
      <th>客户号</th>
      <th>截面</th>
      <th>重量</th>
      <th>重量误差</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @parts.each do |part| %>
        <tr>
          <td><%= part.nr %></td>
          <td><%= part.name %></td>
          <td><%= part.description %></td>
          <td><%= part.part_type.blank? ? '' : part.part_type.nr %></td>
          <td><%= part.color.blank? ? '' : part.color.nr %></td>
          <td><%= part.display_unit(part.measure_unit_id) %></td>
          <td><%= part.display_unit(part.purchase_unit_id) %></td>
          <td><%= part.custom_nr %></td>
          <td><%= part.cross_section %></td>
          <td><%= part.weight %></td>
          <td><%= part.weight_range %></td>
          <td>
            <%= link_to '[详情]', part %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_part_path(part) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', part, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
</script>