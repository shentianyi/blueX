<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">需求项列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #000;margin-top: 0;padding-top: 0;margin-left: 158px;"/>
<hr style="border: 1px solid #000;">
<%= link_to "返回", orders_path, :class => 'btn btn-primary', :style => 'margin:-10px 0 0 20px;width:200px;padding-top:10px; color:#fff;' %>


<hr style="margin: 5px; border: 1px solid #999;">
<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 0;">
    <p style="padding-top: 20px;">需求项列表</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;">
      <div class="page_info">
        <%= page_entries_info @order_items %>
      </div>
      <%= will_paginate @order_items, :container => false %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow: auto;">
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>需求单号</th>
      <th>创建者</th>
      <th>状态</th>
      <th>数量</th>
      <th>零件号</th>
      <th>料盒编号</th>
      <th>是否加急</th>
      <th>备注</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @order_items.each_with_index do |order_item, i| %>
        <tr>
          <td><%= order_item.order.nr %></td>
          <td><%= order_item.user.blank? ? '' : order_item.user.nr %></td>
          <td><%= OrderItemStatus.display order_item.status %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order_item.part.blank? ? '' : order_item.part.nr %></td>
          <td><%= order_item.orderable.blank? ? '' : order_item.orderable.nr %></td>
          <td>
            <% if order_item.is_emergency %>
                <span class="label label-success">是</span>
            <% else %>
                <span class="label label-warning">否</span>
            <% end %>
          </td>
          <td><%= order_item.remarks %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    $('.table-show').css({height: (ClientHeight - 400) + 'px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[15].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[15].children[0].children[0]).ready(function () {
    });
</script>