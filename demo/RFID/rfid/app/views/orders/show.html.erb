<style>
    .col-sm-4 {
        font-size: 2em;
    }
</style>

<p id="notice"><%= notice %></p>
<p class="title">料盒列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>

<div class="col-sm-12" style="margin-top: 100px;border-bottom: 1px solid #000;">
  <div class="col-sm-4">
    <strong>User:</strong>
    <%= @order.user %>
  </div>

  <div class="col-sm-4">
    <strong>Status:</strong>
    <%= @order.status %>
  </div>

  <div class="col-sm-4">
    <strong>Orderable:</strong>
    <%= @order.orderable_id %>
  </div>
</div>

<div class="col-sm-12" style="margin-top: 100px;border-bottom: 1px solid #000;">
  <div class="col-sm-4">
    <strong>Orderable type:</strong>
    <%= @order.orderable_type %>
  </div>

  <div class="col-sm-4">
    <strong>Remarks:</strong>
    <%= @order.remarks %>
  </div>
</div>

<div class="col-sm-12">
  <%= link_to 'Edit', edit_order_path(@order), :class => 'btn btn-primary', :style => 'color:white;padding-top:10px;width:150px;margin:20px 0 0 0;' %>
  <%= link_to 'Back', orders_path, :class => 'btn btn-primary', :style => 'color:white;padding-top:10px;width:150px;margin:20px 0 0 20px;' %>
</div>

<script type="text/javascript" charset="utf-8">
    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[15].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[15].children[0].children[0]).ready(function () {
    });
</script>