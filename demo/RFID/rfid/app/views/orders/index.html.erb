<style type="text/css">

    th, td {
        text-align: center;
    }
</style>

<p class="title">需求单详细列表 <i>&#8593;</i></p>
<hr style="border: 1px solid #999;margin-top: 0;padding-top: 0;margin-left: 148px;"/>


<div class="slide">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-md-12">
      <div class="col-sm-4">
            <span>需求单号：
              <input type="text" name="order[nr]" value="<%= @nr %>"/>
            </span>
      </div>
      <div class="col-sm-4">
            <span>创建者：
              <input type="text" name="order[user_id]" value="<%= @user_id %>"/>
            </span>
      </div>
      <div class="col-sm-4">
            <span>料车编号：
              <input type="text" name="order[orderable_id]" value="<%= @orderable_id %>"/>
            </span>
      </div>
    </div>
    <div class="col-md-12" style="border-bottom: 2px solid #999;margin: 20px 0 0 0;">
      <div class="col-sm-4">
            <span>状态：
              <%= select_tag('order[status]', options_for_select(OrderStatus.menu, @status), include_blank: true) %>
            </span>
      </div>
      <div class="col-sm-4">
            <span>
              创建日期：
              <input type="text" name="order[created_at][start]" class="datetime-picker" value="<%= @created_at_start %>"/>
              ~  <input type="text" name="order[created_at][end]" class="datetime-picker" value="<%= @created_at_end %>"/>
            </span>
      </div>
      <div class="col-sm-4">
        <input style="margin: -10px 0 10px 10px;" type="submit" value="查 找" class="btn btn-primary"/>
      </div>
    </div>
  </form>
</div>

<div style="display: inline-flex;">
  <div class="trapezoid" style="margin: 20px 0 0 0;">
    <p style="padding-top: 20px;">需求单详细</p>
  </div>
  <div style="display: inline-flex;">
    <div class="digg_pagination" style="padding-top: 10px;padding-left: 10px;margin:20px 0 0 0;">
      <div class="page_info">
        <%= page_entries_info @order %>
      </div>
      <%= will_paginate @order, :container => false %>
    </div>
  </div>
</div>

<div class="table-show" style="overflow: auto;">
  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>序号</th>
      <th>需求单号</th>
      <th>创建者</th>
      <th>状态</th>
      <th>料车编号</th>
      <th>创建时间</th>
      <th>备注</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each_with_index do |order, index| %>
        <tr>
          <td><%= index+@orders.offset+1 %>
          <td><%= order.nr %></td>
          <td><%= order.user.blank? ? '' : order.user.nr %></td>
          <td><%= OrderStatus.display order.status %></td>
          <td><%= order.orderable.blank? ? '' : order.orderable.nr %></td>
          <td><%= order.created_at.localtime %></td>
          <td><%= order.remarks %></td>
          <td><%= link_to '清单列表', order_items_order_path(order) %>
            <span class="badge pull-right"><%= order.order_items.count %></td>
          <td><%= link_to '导出数据', {controller: 'orders', action: 'exports', id: order} %></td>
          <td>
            <%= link_to '[详情]', order %>
            <% if current_user.can_edit %>
                <%= link_to '[编辑]', edit_order_path(order) %>
            <% end %>
            <% if current_user.can_delete %>
                <%= link_to '[删除]', order, method: :delete, data: {confirm: '确定删除?'} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript" charset="utf-8">
    var ClientHeight = document.documentElement.clientHeight;
    //    $('.table-show').css({height: (ClientHeight - 400) + 'px'});
    $('.table-show').css({maxHeight: '700px'});

    $('.LeftNav>li').children('a').children('h3').removeAttr('style');
    $('.LeftNav>li').children('a').children('h3').children('i').remove();

    $('.LeftNav>li')[15].children[0].children[0].style['color'] = 'red';

    $('<i class="glyphicon glyphicon-hand-left" style="margin-left: 10px;color:red;"></i>').appendTo($('.LeftNav>li')[15].children[0].children[0]).ready(function () {
    });
</script>
