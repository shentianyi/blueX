<Window x:Class="ImageFullWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoWork"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="Transparent" WindowStyle="None">
    <Grid Background="Transparent">
        <Image Name="image" />
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent"
                Height="100" Width="100" Opacity="0.05" Click="Button_Click"
                Name="CloseBtn"></Button>
    </Grid>
</Window>
